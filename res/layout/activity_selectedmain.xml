<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12a6eb" >
   
    <ImageView
        android:id="@+id/navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/navigation_drawer_indicator" />

    <Button
        android:id="@+id/button_circle"
        android:layout_width="170dp"
        android:layout_height="45dp"
     
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:text="正在获取..." 
        android:background="@drawable/button_style_yellow"/>

    <ImageView
        android:id="@+id/imageView_cloud_bottom"
        android:layout_width="190dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/bg_cloudfull" />

    <ImageView
        android:id="@+id/imageView_cloud_top"
        android:layout_width="190dp"
        android:layout_height="73dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/navigation_drawer"
        android:layout_marginTop="7dp"
        android:src="@drawable/bg_cloudfull" />

    <Button
        android:id="@+id/button_type"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/button_circle"
        android:layout_below="@+id/chuxingleixing"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_style_green"
        android:text="亲子出行"
        android:textSize="19dp" />

    

    <TextView
        android:id="@+id/tuijianshangquan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_circle"
        android:layout_centerHorizontal="true"
        android:text="- 推荐商圈  -"
        android:textColor="#c1c1c1"
        android:textSize="13dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/chuxingleixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tuijianshangquan"
        android:layout_below="@+id/button_circle"
        android:layout_marginTop="20dp"
        android:text="- 出行类型  -"
        android:textColor="#c1c1c1"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/quannengjiejuefangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tuijianshangquan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="定制全能出行解决方案"
        android:textColor="#c1c1c1"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/ganmaqu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quannengjiejuefangan"
        android:layout_centerHorizontal="true"
        android:text="干嘛去"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:layout_marginBottom="5dp" />
 <Button
        android:id="@+id/button_go"
        android:layout_width="43dp"
        android:layout_height="34dp"
        android:layout_below="@+id/button_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_style_go"
        android:text=" " />

</RelativeLayout>