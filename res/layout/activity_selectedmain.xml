<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12a6eb" >

    <ImageView
        android:id="@+id/navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/navigation_drawer_indicator" />

    <TextView
        android:id="@+id/ganmaqu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navigation_drawer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="干嘛去"
        android:textColor="#FFFFFF"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/quannengjiejuefangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ganmaqu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:textColor="#c1c1c1"
        android:textSize="13dp"
        android:text="定制全能出行解决方案" />

    <Button
        android:id="@+id/button_circle"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tuijianshangquan"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:text="正在获取..." 
        android:background="@drawable/button_style_yellow"/>

    <TextView
        android:id="@+id/tuijianshangquan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quannengjiejuefangan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="- 推荐商圈  -"
        android:textColor="#c1c1c1"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/imageView_cloud_bottom"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="79dp"
        android:src="@drawable/bg_cloud2" />

    <ImageView
        android:id="@+id/imageView_cloud_top"
        android:layout_width="90dp"
        android:layout_height="173dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/navigation_drawer"
        android:layout_marginTop="9dp"
        android:src="@drawable/bg_cloud1" />

    <TextView
        android:id="@+id/chuxingleixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tuijianshangquan"
        android:layout_below="@+id/button_circle"
        android:layout_marginTop="26dp"
        android:text="- 出行类型  -"
        android:textColor="#c1c1c1"
        android:textSize="13dp" />

    <Button
        android:id="@+id/button_type"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/button_circle"
        android:layout_below="@+id/chuxingleixing"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_style_green"
        android:text="亲子出行"
        android:textSize="18dp" />

    <Button
        android:id="@+id/button_go"
        android:layout_width="43dp"
        android:layout_height="34dp"
        android:layout_below="@+id/button_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style_go"
        android:text=" " />

</RelativeLayout>
