<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".DetailActivity" >

        <TextView
            android:id="@+id/textView_chuxingleixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="出行类型"
            android:textColor="#c70102" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_chuxingleixing"
            android:layout_below="@+id/textView_chuxingleixing"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:text="RadioButton" />

        <TextView
            android:id="@+id/textView_jiagequjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButton"
            android:layout_below="@+id/radioButton"
            android:layout_marginTop="21dp"
            android:text="价格区间"
            android:textColor="#c70102" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_price_low"
            android:layout_centerHorizontal="true"
            android:text="~"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView_price_low"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_below="@+id/textView_jiagequjian"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/textView_jiagequjian"
            android:background="@drawable/button_detail_price"
            android:gravity="center"
            android:text="30"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_price_high"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_alignTop="@+id/textView1"
            android:layout_marginLeft="41dp"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/button_detail_price"
            android:gravity="center"
            android:text="50"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_meishileixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView_jiagequjian"
            android:layout_below="@+id/textView_price_low"
            android:layout_marginTop="18dp"
            android:text="美食类型"
            android:textColor="#c70102"
            android:textSize="14dp" />

        <GridView
            android:id="@+id/gridView_eat"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignLeft="@+id/textView_meishileixing"
            android:layout_below="@+id/textView_meishileixing"
            android:layout_marginTop="14dp"
            android:numColumns="3" >
        </GridView>

        <TextView
            android:id="@+id/textView_yuleleixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_jiagequjian"
            android:layout_below="@+id/gridView_eat"
            android:layout_marginTop="18dp"
            android:text="娱乐类型"
            android:textColor="#c70102"
            android:textSize="14dp" />

        <GridView
            android:id="@+id/gridView_joy"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/textView_meishileixing"
            android:layout_below="@+id/textView_yuleleixing"
            android:layout_marginTop="14dp"
            android:numColumns="3" >
        </GridView>

        <Button
            android:id="@+id/button_deatilRes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/gridView_joy"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/button_style_save"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="19dp" />
    </RelativeLayout>

</ScrollView>