<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rtlayout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f0eb"
    tools:context=".SettingsActivity" >

    <Button
        android:id="@+id/button_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_settings_item"
        android:gravity="left|center_vertical"
        android:paddingLeft="19dp"
        android:text="账号设置"
        android:textSize="19dp" />

    <Button
        android:id="@+id/button_prefer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/button_account"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_settings_item"
        android:gravity="left|center_vertical"
        android:paddingLeft="19dp"
        android:text="偏好设置"
        android:textSize="19dp" />

    
    <Button
        android:id="@+id/button_guide"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/button_prefer"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_settings_item"
        android:gravity="left|center_vertical"
        android:paddingLeft="19dp"
        android:text="使用引导"
        android:textSize="19dp" />
    <Button
        android:id="@+id/button_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/button_guide"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_settings_item"
        android:gravity="left|center_vertical"
        android:paddingLeft="19dp"
        android:text="关于"
        android:textSize="19dp" />

</RelativeLayout>